<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">



                <ImageView
                    android:layout_width="165.8dp"
                    android:layout_height="21dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/competitions_league_one_horizontal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="bottom">

                    <TextView
                        android:id="@+id/matchInfoDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingTop="8dp"
                        android:text="12/01/2022"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/venueShortName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="The Valley"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:paddingBottom="8dp"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/matchStatusBar"
                    android:layout_width="136dp"
                    android:layout_height="24dp"
                    android:background="#eaf0f2"
                    android:elevation="1dp">

                    <ImageView
                        android:id="@+id/matchStatusIconPlayed"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_match_status_played" />

                    <TextView
                        android:id="@+id/matchStatus"
                        android:layout_width="99dp"
                        android:layout_height="24dp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="4sp"
                        android:text="Match Status"
                        android:textColor="#1e1e1e"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </LinearLayout>


            </LinearLayout>




            <View
                android:layout_width="2dp"
                android:layout_height="100dp"
                android:layout_marginStart="209dp"
                android:layout_marginEnd="116dp"
                android:layout_gravity="start|bottom"
                android:background="#EAF0F3" />

            <ImageView
                android:id="@+id/opponentImagePlaceHolder"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="250dp"
                android:layout_marginEnd="17dp"
                android:layout_gravity="start|bottom"
                android:background="#ffffff"
                android:src="" />
        </FrameLayout>



        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/homeTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="0sp"
                android:textColor="#1e1e1e"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:text="Fleetwood Town" />

            <TextView
                android:id="@+id/homeTeamScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-70dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:gravity="center_horizontal"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="0sp"
                android:textColor="#1e1e1e"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:text="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/awayTeam"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_semi_bold"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="0sp"
                android:textColor="#1e1e1e"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:text="Charlton Athletic" />

            <TextView
                android:id="@+id/awayTeamScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-70dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:gravity="center_horizontal"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="0sp"
                android:textColor="#1e1e1e"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:text="2" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/firstCalltoAction"
                android:layout_width="155dp"
                android:layout_height="48dp"
                android:layout_marginEnd="17dp"
                android:background="#131313"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Report"
                android:textSize="18sp"
                app:backgroundTint="#131313" />

            <Button
                android:id="@+id/secondCalltoAction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background=""
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Match Centre"
                android:textColor="#c30017"
                android:textSize="18sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="#eaf0f2"
            android:gravity="center" />

    </LinearLayout>


</RelativeLayout>